generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("admins")
}

model Category {
  id          String      @id @default(uuid())
  name        String      @unique
  icon        String?
  order       Int         @default(0)
  isActive    Boolean     @default(true) @map("is_active")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  candidates  Candidate[]
  votes       Vote[]

  @@map("categories")
}

model Candidate {
  id         String      @id @default(uuid())
  nomineeId  String
  name       String
  category   Category    @relation(fields: [categoryId],references: [id])
  categoryId String
  image      String?
  votes      Vote[]
  createdAt  DateTime @default(now())

  // Index for faster category-based queries
  @@index([categoryId])
}

model Ticket {
  id             String   @id @default(uuid())
  serial         String   @unique
  votes          Vote[]
  createdAt      DateTime @default(now())
}


model Vote {
  id          String       @id @default(uuid())
  ticketId    String
  candidateId String
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  ticket      Ticket    @relation(fields: [ticketId], references: [id] , onDelete: Cascade)
  candidate   Candidate @relation(fields: [candidateId], references: [id] , onDelete: Cascade)
  createdAt   DateTime  @default(now())

  // Ensures one vote per voter per category
  @@unique([ticketId, categoryId])
  
  // Indexes for faster queries on voting statistics
  @@index([candidateId])
  @@index([categoryId])
  @@index([ticketId])
  @@index([createdAt])
}

// Event settings - singleton table
model Settings {
  id              String    @id @default("default")
  eventName       String    @default("UCSM Fresher Welcome 2026")
  eventStartTime  DateTime?
  votingEnabled   Boolean   @default(false) @map("voting_enabled")
  promoVideo      String?   @map("promo_video") // MinIO object path for promo video
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("settings")
}